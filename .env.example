# ALMANIK PMS - ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this file to .env and fill in your values

# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# Production (PostgreSQL via Neon/Supabase)
DATABASE_URL=postgresql://user:password@host:5432/database

# Development (SQLite - auto-created)
SQLITE_PATH=./almanik.db

# =====================================================
# SECURITY - CRITICAL!
# =====================================================

# Admin user password
# Generate secure password: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# NEVER use default passwords in production!
ADMIN_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Reception user password
RECEPTION_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Session secret (for JWT/session encryption)
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=CHANGE_ME_IN_PRODUCTION

# =====================================================
# SERVER CONFIGURATION
# =====================================================

# Server port
PORT=3000

# Environment: development | production | staging
NODE_ENV=development

# =====================================================
# PRODUCTION CHECKLIST
# =====================================================
# [ ] Change all passwords from defaults
# [ ] Set NODE_ENV=production
# [ ] Configure DATABASE_URL for production
# [ ] Set strong SESSION_SECRET
# [ ] Review CORS settings in server
# [ ] Enable HTTPS/SSL
# [ ] Configure backup strategy
